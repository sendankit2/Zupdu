<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/titleLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:text="Title:" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:id="@+id/title"
        android:layout_toRightOf="@+id/titleLabelTextView"
        android:layout_toEndOf="@+id/titleLabelTextView"
        android:layout_below="@+id/imageView" />

    <TextView
        android:id="@+id/rentLabelTextView"
        android:text="Rent per month($):"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/rent"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rentLabelTextView"
        android:paddingTop="10dp" />

    <TextView
        android:text="Available Date: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:id="@+id/startDateLabelTextView"
        android:layout_alignBaseline="@+id/rent"
        android:layout_alignBottom="@+id/rent"
        android:layout_toRightOf="@+id/rent"
        android:layout_toEndOf="@+id/rent"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/startDate"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/startDateLabelTextView"
        android:layout_alignBottom="@+id/startDateLabelTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>