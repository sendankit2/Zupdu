<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ffffff"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/titleLabelTextView"
        android:text="Title:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/poster"
        />

    <TextView
        android:id="@+id/title"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/titleLabelTextView"
        android:layout_marginLeft="8dp"
        android:gravity="left"
        android:layout_below="@id/poster"
        />

    <TextView
        android:text="Bed:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bedLabelTextView"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bedLabelTextView"
        android:id="@+id/bed"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/title" />

    <TextView
        android:text="Bath:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bathLabelTextView"
        android:layout_below="@+id/bed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bath"
        android:textColor="#000000"
        android:layout_below="@+id/bed"
        android:layout_toRightOf="@+id/bathLabelTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Rent per month($):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rentLabelTextView"
        android:layout_below="@+id/bath"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rent"
        android:layout_below="@+id/bath"
        android:layout_toRightOf="@+id/rentLabelTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Address:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressLabelTextView"
        android:layout_below="@+id/rent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/rent"
        android:layout_toRightOf="@+id/addressLabelTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/petsLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pets:"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/pets"
        android:layout_alignBottom="@+id/pets"
        android:layout_toRightOf="@+id/rent"
        android:layout_toEndOf="@+id/rent"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/pets"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_toRightOf="@+id/petsLabelTextView"
        android:layout_marginLeft="8dp"
        android:layout_alignBaseline="@+id/bath"
        android:layout_alignBottom="@+id/bath" />

    <TextView
        android:id="@+id/startDateLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Date:"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/startDate"
        android:layout_alignBottom="@+id/startDate"
        android:layout_alignLeft="@+id/petsLabelTextView"
        android:layout_alignStart="@+id/petsLabelTextView" />

    <TextView
        android:id="@+id/startDate"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/rent"
        android:layout_alignBottom="@+id/bath"
        android:layout_toRightOf="@+id/startDateLabelTextView"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="Square Feet:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sqftLabelTextView"
        android:layout_alignBottom="@+id/sqft"
        android:layout_alignLeft="@+id/petsLabelTextView"
        android:layout_alignStart="@+id/petsLabelTextView" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sqft"
        android:layout_above="@+id/bath"
        android:layout_toRightOf="@+id/sqftLabelTextView"
        android:layout_marginLeft="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:background="@drawable/border"
        android:hint="Enter your Message here"
        android:textColorHint="#C0C0C0"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/messageEditText"
        android:layout_below="@id/addressLabelTextView"/>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_toRightOf="@id/messageEditText"
        android:layout_alignBaseline="@id/addressEditText"
        android:layout_below="@id/addressLabelTextView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"/>


</RelativeLayout>
